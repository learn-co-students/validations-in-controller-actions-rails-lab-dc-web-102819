<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>
  <%= submit_tag "Create Author" %>
<% end %>
<div>
	
</div>

<% if @author %>
	<div class="field_with_errors">
		<%= @author.errors.messages.keys[0].to_s + ' ' + @author.errors.messages[:name][0] %>
	</div>
<% end %> 
